{
  "name": "aramio-moba",
  "version": "1.0.0",
  "description": "Online browser MOBA game",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "vite",
    "build": "tsc && vite build",
    "build:server": "tsc",
    "start": "node dist/server/index.js"
  },
  "dependencies": {
    "phaser": "^3.70.0",
    "colyseus": "^0.15.0",
    "colyseus.js": "^0.15.0",
    "@colyseus/monitor": "^0.15.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "vite": "^5.0.0",
    "concurrently": "^8.2.2",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17"
  }
} 