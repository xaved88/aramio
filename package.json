{
  "name": "aramio-moba",
  "version": "1.0.0",
  "description": "Online browser MOBA game",
  "main": "dist/server/index.js",
  "scripts": {
    "gen": "node scripts/generate-version.js",
    "predev": "npm run gen",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "vite",
    "prebuild": "npm run gen",
    "build": "tsc && vite build",
    "build:server": "tsc",
    "start": "node dist/server/index.js",
    "colyseus-post-deploy": "pm2 reload ecosystem.config.js --env production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "phaser": "^3.70.0",
    "colyseus": "^0.15.0",
    "colyseus.js": "^0.15.0",
    "@colyseus/monitor": "^0.15.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "vite": "^5.0.0",
    "concurrently": "^8.2.2",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/client/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
} 